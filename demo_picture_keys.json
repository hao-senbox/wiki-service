{
  "create_template_with_pictures": {
    "method": "POST",
    "url": "http://localhost:8023/api/v1/wikis/template",
    "headers": {
      "Content-Type": "application/json",
      "Authorization": "Bearer YOUR_TOKEN_HERE"
    },
    "body": {
      "type": "lesson",
      "elements": [
        {
          "number": 1,
          "type": "text",
          "value": "This is a text element"
        },
        {
          "number": 2,
          "type": "picture",
          "picture_keys": [
            "image1_key.jpg",
            "image2_key.png",
            "image3_key.jpeg"
          ]
        },
        {
          "number": 3,
          "type": "image",
          "value": "single_image_key.jpg"
        }
      ]
    }
  },
  "update_wiki_with_pictures": {
    "method": "PUT",
    "url": "http://localhost:8023/api/v1/wikis/WIKI_ID_HERE",
    "headers": {
      "Content-Type": "application/json",
      "Authorization": "Bearer YOUR_TOKEN_HERE"
    },
    "body": {
      "language": 1,
      "title": "Updated Title",
      "elements": [
        {
          "number": 1,
          "type": "text",
          "value": "Updated text content"
        },
        {
          "number": 2,
          "type": "picture",
          "picture_keys": [
            "new_image1.jpg",
            "new_image2.png"
          ]
        }
      ]
    }
  },
